@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<div class="d-flex">
    <p>¿Divisible entre 2?</p>
    <p class="px-2">@divisibleBy2</p>
</div>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Don't Click Me</button>


@code {
    private int currentCount = 0;
    private string divisibleBy2 => BoolToSiNo(DivisibleBy(currentCount, 2));

    private float numeroA;
    private float numeroB;
    private float resultado;
    private string textResult = "";

    private bool DivisibleBy(int n, int divisor) {
        return n % divisor == 0;
    }

    private string BoolToSiNo(bool b) {
        return b ? "SÍ" : "NO";
    }

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount() {
        currentCount--;
    }

}